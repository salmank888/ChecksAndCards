<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AlertDialogThemeHaze" parent="Base.Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@color/colorDialogBackgroundHaze</item>
        <item name="colorPrimary">@color/colorPrimaryHaze</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkHaze</item>
        <item name="colorAccent">@color/colorAccentHaze</item>
        <item name="android:textColorPrimary">@color/colorAccentLightHaze</item>
    </style>

    <style name="DialogTheme" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">false</item>
    </style>

    <style name="Toolbar" parent="Base.ThemeOverlay.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:minHeight">48dp</item>
    </style>
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ActionButtonStyle">
        <item name="android:background">@drawable/blue_button_selector</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TitleText">
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="GrayButtonStyle">
        <item name="android:background">@drawable/gray_button_selector</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="BlueButtonStyle">
        <item name="android:background">@drawable/blue_button_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="ToolbarButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/blue_button_selector</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="ActionbarButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/blue_button_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>
    <style name="ShadowedScrollViewStyle">
        <item name="android:scrollbarAlwaysDrawHorizontalTrack">true</item>
        <item name="android:scrollbarStyle">insideOverlay</item>
        <item name="android:scrollbars">horizontal</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:scrollbarThumbHorizontal">@drawable/thumb</item>
    </style>
    <style name="ToolbarButtonHaze">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/button_text_toolbar_haze</item>
        <item name="android:background">@color/colorPrimaryHaze</item>
        <item name="android:gravity">center</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="ToolbarToggleButtonHaze" parent="ToolbarButtonHaze">
        <item name="android:textColor">@color/colorAccentHaze</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ActionButtonStyleHaze" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorAccentHaze</item>
        <item name="android:background">@color/colorPrimaryHaze</item>
    </style>

    <style name="DialogAnimationHaze">
        <item name="android:windowEnterAnimation">@anim/slide_center_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom_from_center</item>
    </style>

    <style name="ButtonSelectedViewHaze">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:tag">view_selected</item>
        <item name="android:background">@color/colorAccentHaze</item>
        <item name="android:layout_weight">0.5</item>
    </style>
</resources>
